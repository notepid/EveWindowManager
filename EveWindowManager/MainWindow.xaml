<Window x:Class="EveWindowManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EveWindowManager"
        mc:Ignorable="d"
        Title="evm v0.0.1 - Eve Window Manager" Height="398.549" Width="480.546">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Reload settings from file" Click="ReloadFromFileClick"/>
                <MenuItem Header="_Save settings to file" Click="SaveSettingsToFileClick" />
                <Separator />
                <MenuItem Header="_Exit" Click="ExitClick" />
            </MenuItem>
        </Menu>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Click="RefreshButtonClick" Margin="0,0,2,0">Refresh</Button>
            <Button Grid.Column="1" Click="SaveAllButtonClick" Margin="0,0,2,0">Save all</Button>
            <Button Grid.Column="2" Click="RestoreAllButtonClick" Margin="0,0,2,0">Restore all</Button>
        </Grid>
        <Label Name="lbStatus" Content="..." DockPanel.Dock="Bottom"/>
        <ItemsControl Name="icEveClients" Margin="5,5,5,5">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding MainWindowTitle}" />
                        <Button Grid.Column="1" Click="ItemButtonSaveClick">Save</Button>
                        <Button Grid.Column="2" Click="ItemButtonRestoreClick">Restore</Button>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </DockPanel>
</Window>
